<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Salon.RegistrationPage">
    <ContentPage.Content>
        <StackLayout Padding ="40"   VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand">

            <Label x:Name="regErrorLbl" TextColor="Red" FontAttributes="Bold"></Label>

            <Label Text="Username" x:Name="RegUsername" FontAttributes="Bold"></Label>
            <Entry x:Name="rUsernameLbl" Placeholder="Username"/>

            <Label Text="Password" x:Name="RegPassword"  FontAttributes="Bold"></Label>
            <Entry x:Name="rPasswordLbl" IsPassword="True" Placeholder="Password"/>

            <Label Text="Email" x:Name="RegEmail"  FontAttributes="Bold"></Label>
            <Entry x:Name="rEmailLbl" IsPassword="True" Placeholder="Email"/>

            <Button Text="Register" CornerRadius="60"
                    FontSize="20"
                    HorizontalOptions="CenterAndExpand"
                    BackgroundColor="Transparent"
                    BorderColor="DarkGray"
                    BorderWidth="1.2"
                    WidthRequest="150"
                    Clicked="OnRegisterClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>